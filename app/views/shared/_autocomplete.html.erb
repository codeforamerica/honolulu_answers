<script type="text/javascript">
$(document).ready(function(){
    // let the form be 'indextank-aware'
    <% index_name = Rails.env == 'production' ? ENV['SEARCHIFY_INDEX_PROD'] : ENV['SEARCHIFY_INDEX_DEV'] %>
    $("#search").indextank_Ize("<%= ENV['SEARCHIFY_API_URL'] %>", "<%= index_name %>");
    // let the query box have autocomplete
    $("#query").indextank_Autocomplete({ fieldName: "tags" });
});
</script>
