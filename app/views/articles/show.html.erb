<div id="topDivPattern"></div>
<div id="bgTopDiv" class="headline">  
  <div id="searchContent" class="headline">
    <form id="searchForm" class="noanimation" autocomplete="off" action="/search">
      <p class="hnlanswers">Honolulu Answers</p>
      <input type="text" id="search" name="q" />
      <input type="submit" id="search_btn" value="" />
    </form>
  </div>
</div>

<p id="notice"><%= notice %></p>


<div class="article">
<span class="icon"><img src="/assets/quick_answers_icon.png" /></span>
  <h2>Quick Answers</h2><br />
  <h1><%= @article.title %></h1>

  <div class="content">


  <% if @article.service_url.present? %>
	  <div class="quickAnswer">
	    <div class="button">
			<a href="<%= @article.service_url%>"><img src="/assets/getting_started_btn.png" /></a>
		</div>
	    <h3 class="quickAnswer">Honolulu.gov lets you do this online! </h3>
	    <p>This will take you directly to the online service on the honolulu.gov website.</p>
	  </div>
  <% end %>

  
  
  
  <%= raw @content_html %>
  </div>
  <% if !@article.contact.nil? %>
  <div class="contact">
    <h2>Need more information?</h2>
    <h4><strong><a href="<%= raw @article.contact.url %>"><%= raw @article.contact.name %></a></strong><br />
    <%= raw @article.contact.address %><br />
    Phone: <%= raw @article.contact.number %><br />
  </div>
  <% end %>

</div>