<div class="page-container">
  <div class="breadcrumbs">
    <%= link_to( "Home", root_url) %>
    > Categories
  </div>
  <div class="row">
    <div class="span9">
      <div class="main-content">
        <div class="header">
          <h1>Listing of All Categories</h1>
        </div>
        <ul>
          <% @categories.each do |category| %>
            <li class="category-listing">
              <%= content_tag( :h2, link_to( category.name, category_path(category.id) ) ) %>
              <p class="preview"><%= category.description %></p>
          </li>
          <% end -%>
        </ul>
      </div>
    </div><!-- /span9 -->

    <div class="span3">
      <%= render :partial => 'shared/categories_sidebar' %>
    </div><!-- /span3 -->

  </div><!-- /row -->
</div><!-- /page-container -->